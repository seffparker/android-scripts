#!/system/xbin/bash

## Copy songs from a predfined playlist
## Author: Seff P
## Version: 20191129

source check-root
source termux-env
source setcolor

SRC=/sdcard/Playlists/Sync.m3u8

DEST=/sdcard/DCIM/_TEMP_of_DCIM/pls2file/
#DEST=/mnt/media_rw/usbotg/Music

mkdir -p $DIR
if [ -d "$DEST" ]
    then
    echo "Copying songs to $DEST"
    rsync -v --files-from=$SRC / $DEST && DONE || FAIL
else
    echo "Destination $DEST doesn't exists"
fi