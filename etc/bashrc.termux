# bashrc for Termux

shopt -s histappend

export USER=$(whoami)
alias ll='ls -la'
alias su='/sbin/su -s /system/xbin/bash'
export PATH="$PATH:/system/bin:/system/xbin"
export HISTSIZE=4096
echo
report

# enable colorful terminal
if [[ ${EUID} == 0 ]] ; then
        PS1='\[\033[01;31m\]${USER:=$USER}@${HOSTNAME:=$HOSTMAME}\[\033[01;32m\] \W \$\[\033[00m\] '
else
        USER=termux
        PS1='\[\033[01;33m\]${USER:=$USER}@${HOSTNAME:=$HOSTMAME}\[\033[01;32m\] \w \$\[\033[00m\] '
fi